<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextHeader1" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
    </style>

    <style name="editTextHeader2" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="editTextBody1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editTextBody2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="option" parent="rippleStyle">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="optionTextStyle" parent="option">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="rippleStyle">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="toolbarTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="boxText">
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>